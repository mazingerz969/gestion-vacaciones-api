# Configuraciones de Servidor
PORT=3000
NODE_ENV=development

# Conexión a Base de Datos
MONGODB_URI=mongodb://localhost:27017/gestion_vacaciones
MONGODB_TEST_URI=mongodb://localhost:27017/gestion_vacaciones_test

# Autenticación JWT
JWT_SECRET=tu_secreto_jwt_muy_seguro
JWT_EXPIRATION=1h

# Configuraciones de Seguridad
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Configuraciones de Correo (futuro)
EMAIL_HOST=smtp.ejemplo.com
EMAIL_PORT=587
EMAIL_USER=usuario@ejemplo.com
EMAIL_PASS=contraseña_segura

# Configuraciones de Aplicación
MAX_VACATION_DAYS_PER_YEAR=22
VACATION_REQUEST_ADVANCE_DAYS=30

# Configuraciones de Integración
HR_SYSTEM_API=https://rrhh.empresa.com/api
AUTH_SYSTEM_API=https://auth.empresa.com/api
INTEGRATION_API_KEY=clave_api_integracion
SYNC_INTERVAL_MINUTES=60

# Configuración de Correo
MAIL_HOST=smtp.empresa.com
MAIL_PORT=587
MAIL_USER=notificaciones@empresa.com
MAIL_PASS=contraseña_correo
MAIL_FROM=Gestión de Vacaciones <notificaciones@empresa.com>

# Configuraciones de Seguridad
CORS_ORIGIN=http://localhost:3000
MAX_REQUEST_LIMIT=100
